{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": {
					"level": "off"
				},
				"noUselessElse": {
					"level": "off"
				},
				"useNodejsImportProtocol": {
					"level": "off"
				}
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error"
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "none",
			"semicolons": "always",
			"bracketSpacing": true
		}
	}
}
